//读取三个整数，并显示出他们的合计值和平均值
#include<stdio.h>
int main()
{
	int a, b, c;
	int sum;
	double ave;

	puts("请输入三个整数。");
	printf("整数a:");
	scanf("%d", &a);
	printf("整数b:");
	scanf("%d", &b);
	printf("整数c:");
	scanf("%d", &c);

	sum = a + b + c;
	ave = (double)sum / 3;

	printf("他们的合计值是%5d.\n", sum);
	//%5d 显示至少5位的十进制整数
	
	printf("他们的平均值是%5.1f.\n", ave);
	//%5.1f 显示至少五位的浮点数。但是，小数后只显示一位
	
	return 0;
}
